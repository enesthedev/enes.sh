{
  "name": "enes-sh",
  "author": "Enes Bayraktar <enes.bayraktar@outlook.com.tr>",
  "description": "Personal blog website built with NextJS",
  "version": "1.1.2",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "build:packages": "turbo build --filter=./packages/*",
    "dev:packages": "turbo dev --filter=./packages/*",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/bun": "latest",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.29",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
